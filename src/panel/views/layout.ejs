<!DOCTYPE html>
<html lang="pt-BR" x-data="{ theme: Alpine.store('theme').current }" :class="theme">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | FR4UD Platform</title>

    <!-- Font: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Tailwind (assumindo que voc√™ tem um build local) -->
    <link href="/public/css/style.css" rel="stylesheet">

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Chart.js (caso use em alguma p√°gina) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        [x-cloak] { display: none !important; }
        body { font-family: 'Inter', sans-serif; }

        /* Glassmorphism base */
        .glass {
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(148, 163, 184, 0.2);
        }

        /* Anima√ß√£o float sutil */
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-6px); }
        }
        .animate-float { animation: float 6s ease-in-out infinite; }
    </style>
</head>

<body class="bg-gradient-to-br from-slate-900 via-blue-900/20 to-slate-900 text-gray-100 antialiased transition-all duration-500">

<div class="flex h-screen overflow-hidden">

    <!-- SIDEBAR -->
    <aside class="w-72 glass border-r border-blue-500/20 flex-shrink-0 hidden md:flex flex-col shadow-2xl shadow-blue-900/30">
        <div class="px-8 py-6 border-b border-blue-500/30">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-2xl flex items-center justify-center text-3xl shadow-xl shadow-blue-500/50 animate-float">
                    üõ°Ô∏è
                </div>
                <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">
                    FR4UD Platform
                </h1>
            </div>
        </div>

        <nav class="flex-1 px-6 py-8 space-y-3">
            <a href="/dashboard"
               class="flex items-center gap-4 px-6 py-4 rounded-2xl transition-all duration-300 hover:bg-blue-900/40 hover:shadow-lg hover:shadow-blue-500/30
               <%= activePage === 'dashboard' ? 'bg-gradient-to-r from-blue-600/50 to-cyan-600/50 text-white shadow-xl shadow-blue-500/40' : 'text-gray-300' %>">
                <span class="text-2xl">üìä</span>
                <span class="font-medium text-lg">Dashboard</span>
            </a>

            <a href="/api-keys"
               class="flex items-center gap-4 px-6 py-4 rounded-2xl transition-all duration-300 hover:bg-blue-900/40 hover:shadow-lg hover:shadow-blue-500/30
               <%= activePage === 'api-keys' ? 'bg-gradient-to-r from-blue-600/50 to-cyan-600/50 text-white shadow-xl shadow-blue-500/40' : 'text-gray-300' %>">
                <span class="text-2xl">üîë</span>
                <span class="font-medium text-lg">API Keys</span>
            </a>

            <a href="/docs"
               class="flex items-center gap-4 px-6 py-4 rounded-2xl transition-all duration-300 hover:bg-blue-900/40 hover:shadow-lg hover:shadow-blue-500/30
               <%= activePage === 'docs' ? 'bg-gradient-to-r from-blue-600/50 to-cyan-600/50 text-white shadow-xl shadow-blue-500/40' : 'text-gray-300' %>">
                <span class="text-2xl">üìò</span>
                <span class="font-medium text-lg">Documenta√ß√£o</span>
            </a>

            <a href="/billing"
               class="flex items-center gap-4 px-6 py-4 rounded-2xl transition-all duration-300 hover:bg-blue-900/40 hover:shadow-lg hover:shadow-blue-500/30
               <%= activePage === 'billing' ? 'bg-gradient-to-r from-blue-600/50 to-cyan-600/50 text-white shadow-xl shadow-blue-500/40' : 'text-gray-300' %>">
                <span class="text-2xl">üí≥</span>
                <span class="font-medium text-lg">Billing</span>
            </a>
        </nav>

        <div class="px-8 py-6 border-t border-blue-500/30">
            <p class="text-sm text-gray-400">
                Logado como <span class="text-white font-semibold"><%= user.username %></span>
            </p>
        </div>
    </aside>

    <!-- MAIN AREA -->
    <div class="flex-1 flex flex-col overflow-hidden">

        <!-- TOPBAR -->
        <header class="glass border-b border-blue-500/20 shadow-xl">
            <div class="flex items-center justify-between px-8 py-5">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">
                    <%= title %>
                </h1>

                <div class="flex items-center gap-8">
                    <div class="flex items-center gap-3 bg-slate-800/50 rounded-xl px-5 py-3 border border-blue-500/30">
                        <span class="text-sm text-gray-400">Plano:</span>
                        <strong class="text-xl text-cyan-300 font-bold"><%= user.plan %></strong>
                    </div>

                    <button
                        @click="Alpine.store('theme').toggleTheme()"
                        class="w-12 h-12 bg-slate-800/60 rounded-xl flex items-center justify-center hover:bg-blue-600/40 hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-cyan-500/50">
                        <span class="text-2xl">üåì</span>
                    </button>

                    <form action="/dashboard/logout" method="POST" class="inline">
                        <button type="submit"
                            class="px-6 py-3 text-sm font-medium bg-gradient-to-r from-red-600 to-red-700 text-white rounded-xl hover:from-red-700 hover:to-red-800 transform hover:scale-105 transition-all shadow-lg shadow-red-500/40">
                            Sair
                        </button>
                    </form>
                </div>
            </div>
        </header>

        <!-- CONTENT -->
        <main class="flex-1 overflow-y-auto bg-gradient-to-b from-slate-900/50 to-slate-900">
            <div class="container mx-auto px-8 py-10">
                <%- body %>
            </div>
        </main>
    </div>
</div>

<!-- TOAST NOTIFICATION -->
<div
    x-data="{ show: false, message: '', type: 'success' }"
    @toast.window="
        show = true;
        message = $event.detail.message;
        type = $event.detail.type || 'success';
        setTimeout(() => show = false, 4000);
    "
    x-show="show"
    x-cloak
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 translate-y-10"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-10"
    :class="{
        'bg-gradient-to-r from-green-600 to-emerald-600 shadow-green-500/50': type === 'success',
        'bg-gradient-to-r from-red-600 to-rose-600 shadow-red-500/50': type === 'error',
        'bg-gradient-to-r from-blue-600 to-cyan-600 shadow-cyan-500/50': type === 'info'
    }"
    class="fixed bottom-8 right-8 glass text-white py-4 px-8 rounded-2xl shadow-2xl border border-white/10 min-w-80"
>
    <p class="font-semibold text-lg" x-text="message"></p>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.store('theme', {
            current: localStorage.getItem('theme') || 'dark',
            init() {
                document.documentElement.classList.toggle('dark', this.current === 'dark');
            },
            toggleTheme() {
                this.current = this.current === 'dark' ? 'light' : 'dark';
                localStorage.setItem('theme', this.current);
                document.documentElement.classList.toggle('dark', this.current === 'dark');
            }
        });
    });
</script>

</body>
</html>