<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        .animate-float { animation: float 6s ease-in-out infinite; }
        
        .glass {
            background: rgba(30, 41, 59, 0.4);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(148, 163, 184, 0.2);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-slate-900 via-blue-900/30 to-slate-900 text-gray-100 min-h-screen">

    <!-- HEADER -->
    <header class="backdrop-blur-lg bg-slate-900/70 border-b border-blue-500/20 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-2xl flex items-center justify-center text-3xl shadow-2xl shadow-blue-500/30 animate-float">
                    üì´
                </div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">
                    <%= title %>
                </h1>
            </div>

            <div class="flex items-center gap-8">
                <span class="text-sm text-gray-300">
                    Ol√°, <span class="font-semibold text-white"><%= username %></span> üëã
                </span>
                <div class="flex gap-4">
                    <a href="/dashboard" class="px-6 py-3 text-sm font-medium bg-blue-600/20 text-blue-300 rounded-xl hover:bg-blue-600/40 hover:scale-105 transition-all shadow-md">
                        Dashboard
                    </a>
                    <a href="/logout" class="px-6 py-3 text-sm font-medium bg-red-600/20 text-red-400 rounded-xl hover:bg-red-600/30 hover:scale-105 transition-all shadow-md">
                        Sair
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="max-w-7xl mx-auto px-6 py-10">

        <div class="mb-12">
            <h2 class="text-4xl font-bold text-white mb-3">Consulta por CEP</h2>
            <p class="text-xl text-gray-400">Busque informa√ß√µes detalhadas de endere√ßos brasileiros por CEP</p>
        </div>

        <!-- SEARCH FORM -->
        <div class="glass rounded-3xl p-10 mb-12 shadow-2xl shadow-blue-500/20 border-blue-500/30">
            <form id="searchForm" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 items-end">
                <div class="lg:col-span-1">
                    <label for="cep" class="block text-lg font-medium text-gray-300 mb-3">N√∫mero do CEP</label>
                    <input type="text" id="cep" name="cep" required placeholder="Ex: 01001-000" 
                           class="w-full px-6 py-4 text-xl bg-slate-800/70 border border-blue-500/50 rounded-2xl focus:outline-none focus:border-cyan-400 focus:ring-4 focus:ring-cyan-500/30 text-white placeholder-gray-500">
                </div>

                <div>
                    <label for="level" class="block text-lg font-medium text-gray-300 mb-3">N√≠vel de Detalhe</label>
                    <select id="level" name="level" 
                            class="w-full px-6 py-4 text-lg bg-slate-800/70 border border-blue-500/50 rounded-2xl focus:outline-none focus:border-cyan-400 focus:ring-4 focus:ring-cyan-500/30 text-white">
                        <option value="basic">B√°sico</option>
                        <option value="medium">M√©dio</option>
                        <option value="advanced">Avan√ßado</option>
                    </select>
                </div>

                <div>
                    <button type="submit" 
                            class="w-full px-8 py-5 text-xl font-bold text-white bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl hover:from-blue-700 hover:to-cyan-700 transform hover:scale-105 transition-all shadow-xl shadow-blue-500/50">
                        üîç Consultar CEP
                    </button>
                </div>
            </form>
        </div>

        <!-- RESULTS -->
        <div class="glass rounded-3xl p-10 shadow-2xl shadow-blue-500/20 border-blue-500/30">
            <h3 class="text-3xl font-bold text-white mb-8 flex items-center gap-4">
                <span class="text-4xl">üìã</span> Resultados da Consulta
            </h3>

            <div id="results" class="min-h-48">
                <p class="text-center text-xl text-gray-500 py-12">Nenhum resultado para exibir ainda. Fa√ßa uma consulta acima.</p>
            </div>
        </div>

    </main>

    <script>
        document.getElementById('searchForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const cep = document.getElementById('cep').value.trim();
            const level = document.getElementById('level').value;
            const resultsDiv = document.getElementById('results');
            
            // Loading state
            resultsDiv.innerHTML = `
                <div class="text-center py-16">
                    <div class="inline-block animate-spin rounded-full h-16 w-16 border-4 border-cyan-500 border-t-transparent"></div>
                    <p class="mt-6 text-xl text-cyan-300">Consultando CEP...</p>
                </div>
            `;

            try {
                const response = await fetch(`/api/search/cep/${cep}?level=${level}`, {
                    headers: {
                        'X-API-Key': '<%= user.api_key_value %>'
                    }
                });
                
                const data = await response.json();

                if (data.success && Object.keys(data.data).length > 0) {
                    resultsDiv.innerHTML = formatResults(data.data);
                } else {
                    resultsDiv.innerHTML = `
                        <div class="text-center py-16">
                            <p class="text-2xl text-red-400 mb-4">‚ö†Ô∏è Nenhum resultado encontrado</p>
                            <p class="text-lg text-gray-400">Verifique se o CEP est√° correto e tente novamente.</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Erro na consulta:', error);
                resultsDiv.innerHTML = `
                    <div class="text-center py-16">
                        <p class="text-2xl text-red-400 mb-4">üîå Erro de conex√£o</p>
                        <p class="text-lg text-gray-400">${error.message}</p>
                    </div>
                `;
            }
        });

        function formatResults(data) {
            let html = '';
            let hasResults = false;

            for (const dbName in data) {
                if (data[dbName] && data[dbName].length > 0) {
                    hasResults = true;
                    html += `<div class="mb-10">`;
                    html += `<h4 class="text-2xl font-bold text-cyan-300 mb-6 border-b border-cyan-500/30 pb-3">${dbName.toUpperCase()}</h4>`;
                    
                    data[dbName].forEach(item => {
                        html += `<div class="bg-slate-800/60 backdrop-blur rounded-2xl p-6 mb-6 border border-cyan-500/30 shadow-lg">`;
                        html += `<dl class="grid grid-cols-1 md:grid-cols-2 gap-4">`;
                        
                        for (const key in item) {
                            html += `
                                <div>
                                    <dt class="text-sm font-medium text-gray-400">${key}</dt>
                                    <dd class="mt-1 text-lg text-white break-words">${item[key] || '<em class="text-gray-500">n√£o informado</em>'}</dd>
                                </div>
                            `;
                        }
                        
                        html += `</dl></div>`;
                    });
                    
                    html += `</div>`;
                }
            }

            if (!hasResults) {
                return `
                    <div class="text-center py-16">
                        <p class="text-2xl text-gray-400">Nenhum dado encontrado para este CEP.</p>
                    </div>
                `;
            }

            return html;
        }
    </script>
</body>
</html>